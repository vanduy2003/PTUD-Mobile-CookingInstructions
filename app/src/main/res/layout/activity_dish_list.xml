<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD5D5"
    tools:context=".Controller.Activity_Home">

    <!-- Phần thanh tìm kiếm -->
    <LinearLayout
        android:id="@+id/herder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8B3F"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Tìm kiếm theo món ăn"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:typeface="serif" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            app:srcCompat="@drawable/magnifying" />

    </LinearLayout>

    <!-- GridView hiển thị danh mục -->

    <ImageView
        android:id="@+id/Banner"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="@id/gvDishList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/herder"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/banner"
        tools:ignore="MissingConstraints" />

    <GridView
        android:id="@+id/gvDishList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="2"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Banner" />

    <!-- Phần navbar cố định ở cuối màn hình -->

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnThoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Add"
        android:src="@drawable/close"
        app:backgroundTint="#E91E63"
        app:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
